<?xml version="1.0" encoding="utf-8"?> 
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:id="@+id/d_mainView">	
    <RelativeLayout        
        android:id="@+id/llLoginInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >      
        <TextView
	        android:id="@+id/tvvUser"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:gravity="right"
	        android:text="@string/tvwUser"
	        android:textSize="@dimen/logInfoTextSize_normal"/>
        <TextView
	        android:id="@+id/tvvUserId"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:layout_toRightOf="@+id/tvvUser"
	        android:layout_alignBaseline="@+id/tvvUser"
	        android:gravity="center_vertical|center"
	        android:text="@string/tvwUsername"
	        android:textSize="@dimen/logInfoTextSize_normal"/>
        <TextView
	        android:id="@+id/tvvAndroidID"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
        	android:layout_below="@+id/tvvUser"	
	        android:gravity="center_vertical|right"
	        android:text="@string/tvwAndroidID"
	        android:textSize="@dimen/logInfoTextSize_normal"/>
        <TextView
	        android:id="@+id/tvvDeviceId"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="3dp"
	        android:layout_toRightOf="@+id/tvvAndroidID"
	        android:layout_alignBaseline="@+id/tvvAndroidID"
	        android:gravity="center_vertical|center"
	        android:text="@string/tvwAndroidID"
	        android:textSize="@dimen/logInfoTextSize_normal"/>
   		<TextView
	        android:id="@+id/tvvDatabase"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:layout_toRightOf="@+id/tvvUserId"
	        android:layout_alignBaseline="@+id/tvvUser"
	        android:gravity="center_vertical|right"
	        android:text="@string/tvwDatabase"
	        android:textSize="@dimen/logInfoTextSize_normal"/> 
    </RelativeLayout> 
    <TextView
        android:id="@+id/d_tvwTrxNo"
        android:layout_width="@dimen/downloadTvw_width"
        android:layout_height="wrap_content"      
        android:layout_marginTop="15dp"
        android:layout_below="@+id/llLoginInfo"
        android:text="@string/tvwGRNTrx_No"
        android:gravity="right"
        android:textSize="@dimen/textSize_normal"  />

    <EditText
        android:id="@+id/d_etvTrxNo"
        android:layout_width="@dimen/downloadEvw_width"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/d_tvwTrxNo"
        android:layout_alignBaseline="@+id/d_tvwTrxNo"
        android:background="#ffffff"
        android:hint=""
       	android:inputType="number"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="@dimen/textSize_normal" /> 
    <TextView
        android:id="@+id/d_tvvCustCode"
        android:layout_width="@dimen/downloadTvw_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d_tvwTrxNo"
        android:layout_marginTop="8dp"
        android:text="@string/tvwCustomerCode"
        android:gravity="right"
        android:textSize="@dimen/textSize_normal" />

    <EditText
        android:id="@+id/d_etwCustCode"
        android:layout_width="@dimen/downloadEvw_width"
        android:layout_height="wrap_content"
        android:layout_below="@+id/d_etvTrxNo"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/d_tvvCustCode"
        android:layout_alignBaseline="@+id/d_tvvCustCode"
        android:background="#ffffff"
        android:hint=""
        android:inputType="textCapCharacters"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="@dimen/textSize_normal" />
    <RadioGroup
        android:id="@+id/rbgSort_Option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"    
        android:layout_below="@+id/d_tvvCustCode"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rbnOpt_SortByLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/strOptionSortByLocation" 
            android:textSize="@dimen/textSize_normal"/>
        <RadioButton
            android:id="@+id/rbnOpt_SortByLineNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="@string/strOptionSortByLineNo" 
            android:textSize="@dimen/textSize_normal"
            />
    </RadioGroup>
    
    <Button
        android:id="@+id/d_btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rbgSort_Option"
        android:layout_marginTop="12dp"
        android:textColor="#ffffff"
        android:text="@string/btnDownload" 
        android:textSize="@dimen/buttonTextSize_normal"/>
     <Button
        android:id="@+id/d_btnUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/d_btnDownload"
        android:layout_alignBaseline="@+id/d_btnDownload"
        android:textColor="#ffffff"
        android:text="@string/btnUpload" 
        android:textSize="@dimen/buttonTextSize_normal"/>    
     <Button
        android:id="@+id/d_btnConfirmGin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/d_btnUpload"
        android:layout_alignBaseline="@+id/d_btnDownload"      
        android:textColor="#ffffff"
        android:text="@string/btnConfirmGin"
        android:textSize="@dimen/buttonTextSize_normal" />
     <Button
        android:id="@+id/d_btnCancelGin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/d_btnConfirmGin"
        android:layout_alignBaseline="@+id/d_btnDownload"      
        android:textColor="#ffffff"
        android:text="@string/btnCancel"
        android:textSize="@dimen/buttonTextSize_normal"/>
	<HorizontalScrollView
	    android:layout_marginTop="5dp"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/d_btnDownload"  >
		 <RelativeLayout 
	     	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content">
			 <LinearLayout     
		     	android:id="@+id/d_lilHeaderView"
		     	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		        android:background="@color/listView_headerBgColor"
			    android:orientation="horizontal">  
		       <TextView
		        android:id="@+id/dl_lvhGINTrx_No"
				android:layout_height="@dimen/listViewHeader_height"
				android:layout_width="@dimen/listTrxNo_width"
				android:text="@string/tvwGRNTrx_No"
				android:textSize="@dimen/headerTextSize_normal"
		        android:textStyle="bold"
		        android:textColor="@color/listView_headerTextColor"/>   
		       <TextView
		        android:id="@+id/dl_lvhReferenceNo"
				android:layout_height="@dimen/listViewHeader_height"
				android:layout_width="@dimen/listReferenceNo_width"
				android:text="@string/tvwRef_No"
				android:textSize="@dimen/headerTextSize_normal"
		        android:textStyle="bold"
		        android:textColor="@color/listView_headerTextColor"/>  
		       <TextView
		        android:id="@+id/dl_lvhCustomerName"
				android:layout_height="@dimen/listViewHeader_height"
				android:layout_width="@dimen/listCustName_width"
				android:text="@string/tvwCustomerName"
				android:textSize="@dimen/headerTextSize_normal"
		        android:textStyle="bold"
		        android:textColor="@color/listView_headerTextColor"/>
		       <TextView
		        android:id="@+id/dl_lvhCustomerCode"
				android:layout_height="@dimen/listViewHeader_height"
				android:layout_width="@dimen/listCustCode_width"
				android:text="@string/tvwCustomerCode"
				android:textSize="@dimen/headerTextSize_normal"
		        android:textStyle="bold"
		        android:textColor="@color/listView_headerTextColor"/>  
		       <TextView
		        android:id="@+id/dl_lvhGINDate"
				android:layout_height="@dimen/listViewHeader_height"
				android:layout_width="@dimen/listDate_width"
				android:text="@string/tvwGINDate"
				android:textSize="@dimen/headerTextSize_normal"
		        android:textStyle="bold"
		        android:textColor="@color/listView_headerTextColor"/> 
			 </LinearLayout>
			 <LinearLayout 			     
			    android:id="@+id/d_lilZoomView"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:layout_below="@+id/d_lilHeaderView"   
			    android:orientation="vertical" >			
			    <ListView
				    android:id="@+id/lvvGinDownloadedList"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
					android:divider="#ffffff" />    
			 	</LinearLayout>	
		 </RelativeLayout>
	</HorizontalScrollView>
</RelativeLayout>