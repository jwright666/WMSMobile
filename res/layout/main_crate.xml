<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >	
    <fragment class = "sg.com.innosys.wms.UI.Crating.FragGinHeaderForCrate" 
        android:id="@+id/fragGinHeaderForCrate"
        android:layout_width="fill_parent"
        android:gravity="center_vertical|right"
        android:layout_height="wrap_content"  />

    <Button         
        android:id="@+id/btnAddNewCrate"
        android:text="@string/btnAddNewCrate"
        android:layout_below="@+id/fragGinHeaderForCrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttonTextSize_normal"/>    
    <Button         
        android:id="@+id/btnUploadGINandCrateData"
        android:text="@string/btnUploadGINandCrateData"
        android:layout_toRightOf="@+id/btnAddNewCrate"
        android:layout_alignBaseline="@+id/btnAddNewCrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/buttonTextSize_normal"/>
    
    <fragment class = "sg.com.innosys.wms.UI.Crating.FragGinCrateDetail"
        android:id="@+id/fragGinCrateDetail"
        android:layout_below="@+id/btnAddNewCrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>